# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Kotlin and Java files
[*.{kt,kts,java}]
indent_size = 4
max_line_length = 120

# XML files
[*.xml]
indent_size = 2
max_line_length = 120

# Gradle files
[*.gradle]
indent_size = 4

# Properties files
[*.properties]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON files
[*.json]
indent_size = 2